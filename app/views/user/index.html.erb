<!DOCTYPE html>

<html>
<head>
  <%= stylesheet_link_tag 'user' %>
</head>

<body>
<section class="login-box">
  <header class="login-header">
    <h1>Chat Login</h1>
  </header>
  <ol class="selection-box">
    <% @users.each do |user| %>
      <li>
        <div class="user-image">
          <%= link_to (image_tag ("profile_pics/" + user.profile_pic)) %>
        </div> 
        <p class="user-name"><%= user.user_name %></p>
      </li>
    <% end %>
  </ol>
</section>
</body>
</html>
